def encontrar_maximos_locales(data):
    maximos_locales = (np.diff(np.sign(np.diff(data))) < 0).nonzero()[0] + 1
    return maximos_locales

maximos = encontrar_maximos_locales(valores)

print("Máximos locales en las posiciones:", maximos)
print("Valores de los máximos locales:", valores[maximos])
